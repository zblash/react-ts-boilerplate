{
  "name": "react-typescript-boilerplate",
  "version": "1.0.0",
  "description": "React SPA Boilerplate",
  "scripts": {
    "clean-dist": "rimraf dist/*",
    "build": "yarn run clean-dist && cross-env NODE_ENV=production webpack --config=webpack/production.js",
    "lint": "eslint ./src/**/*.ts* ./tests/**/*.test.ts* --cache",
    "prettier": "prettier  --ignore-path ./.prettierignore  **/*.ts*",
    "fix": "yarn prettier --write && yarn lint --fix",
    "tsc": "tsc",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config=webpack/development.js",
    "start": "node server.js",
    "test": "jest --coverage  --config=jest.json",
    "storybook": "cross-env NODE_ENV=development start-storybook -p 9009 -c stories/config -s public",
    "build-storybook": "cross-env NODE_ENV=development build-storybook -s public",
    "check-rule": "yarn tsc && yarn lint && yarn prettier && yarn test"
  },
  "author": "Yusuf Can Celik",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3",
    "express": "^4.17.2",
    "i18next": "^21.6.10",
    "i18next-browser-languagedetector": "^6.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.25.3",
    "react-i18next": "^11.15.3",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "react-table": "^7.7.0",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "file-loader": "^6.2.0",
    "fork-svg-loader": "^0.0.3",
    "html-webpack-loader": "^0.0.5",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "image-webpack-loader": "^8.0.1",
    "jest": "^27.4.7",
    "mini-css-extract-plugin": "^2.4.5",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2",
    "webpack-merge": "^5.8.0"
  }
}
